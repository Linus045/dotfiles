[bar/top_i3]
monitor = ${env:MONITOR:}
; Size
width  = 100%
height = 25

; Offset
;offset-x = 50%
;offset-y = 50%

; Position
bottom = false

; Radius
radius = 0

; Align modules fixed to middle
fixed-center = true

; Colors
background = ${colors.background}
foreground = ${colors.grey}

; Underline
line-size  = 2
line-color = ${colors.foreground}

; Border
border-size  = 0
border-color = ${colors.background}

; Padding
padding-left  = 0
padding-right = 0

; Margin of modules
module-margin-left  = 0
module-margin-right = 0

; Font
; last number behind the semicolon is y offset from top
; font0 = Iosevka:size=12;3
font-0 = FiraCode Nerd Font Mono:size=12;3
font-1 = FiraCode Nerd Font Mono:style=Regular:size=12;3i
font-2 = :size=12;3
font-3 = FiraCode Nerd Font Mono:size=22:style=Bold;5


; Modules
modules-left   = cpu spacerSmall temperature spacerBig memory
modules-center = time i3 date
modules-right  = pulseaudio-control battery network lock logout_i3 poweroff

; Cursor actions
cursor-click  = pointer
cursor-scroll = ns-resize





