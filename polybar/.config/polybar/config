font-1 = FiraCode Nerd Font Mono:style=Regular:size=12;3i
font-2 = :size=12;3
font-3 = FiraCode Nerd Font Mono:size=22:style=Bold;5
font-4 = FiraCode Nerd Font Mono:size=18:style=Bold;5

; Modules
